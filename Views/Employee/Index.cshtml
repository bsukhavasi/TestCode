@model EmployeeDirect.Models.EmployeeVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm("UpdateEmployee", "Employee"))
{
    <div class="card">
        <div class=" card-header" style="height:30px"><b>Employee Details</b></div>
        <div class=" card-body">
            <table class="table table-bordered" id="EmployeeDetails">
                <thead>
                    <tr>
                        <th style="visibility:hidden">ID</th>
                        <th>Employee Name</th>
                        @*<th>Last Name</th>*@
                        <th>Employee Type</th>
                        <th>Work Days</th>
                        <th>Vacation Days</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Employees)
                    {
                    <tr>
                        <td style="visibility:hidden">@item.EmployeeID</td>
                        <td> @Html.DisplayFor(modelItem => item.Name)</td>
                        @*<td> @Html.DisplayFor(modelItem => item.LastName)</td>*@
                        <td> @Html.DisplayFor(modelItem => item.EmployeeTypeCD)</td>
                        <td> @Html.DisplayFor(modelItem => item.WorkDays)</td>
                        <td> @Html.DisplayFor(modelItem => item.VacationDays)</td>                        
                        <td>@Html.ActionLink("Add Work", "Work", "Employee", new { id = item.EmployeeID, editType = "W" }, htmlAttributes: new { @class = "btn btn-info btn-sm" })</td>
                        <td>@Html.ActionLink("Add Vacation", "Work", "Employee", new { id = item.EmployeeID, editType = "V" }, htmlAttributes: new { @class = "btn btn-info btn-sm" })</td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>

    </div>

}




